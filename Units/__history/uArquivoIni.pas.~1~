unit uArquivoIni;

interface

uses IniFiles, System.SysUtils, System.ExtractFilePath;
procedure EscreverArquivoIni(const Servidor, Base, Porta: String);

implementation

procedure EscreverArquivoIni(const Servidor, Base, Porta: String);
var
  Arquivo: TIniFile;
begin
  Arquivo := TIniFile.Create(IncludeTrailingPathDelimiter
    (ExtractFilePath(Application.ExeName))

  end;

  end.
