unit dmColaboradorLoc;

interface

uses
  System.SysUtils, System.Classes, Data.DB, FireDAC.Stan.Intf,
  FireDAC.Stan.Option, FireDAC.Stan.Param, FireDAC.Stan.Error, FireDAC.DatS,
  FireDAC.Phys.Intf, FireDAC.DApt.Intf, FireDAC.Stan.Async, FireDAC.DApt,
  FireDAC.Comp.DataSet, FireDAC.Comp.Client;

type
  TColaboradorLocDataModule = class(TDataModule)
    fdqryColaboradorLoc: TFDQuery;
    fldColaboradorLoccodigo: TIntegerField;
    fldColaboradorLocnome: TWideStringField;
    fldColaboradorLocmatricula: TWideStringField;
    fldColaboradorLoccodigo_setor: TIntegerField;
    procedure DataModuleCreate(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }

  procedure Buscar(const _ACampo, _AValor: string);
  end;

var
  ColaboradorLocDataModule: TColaboradorLocDataModule;

implementation

uses
  dmGerenciadorConexao, uPesquisaBase;

{%CLASSGROUP 'Vcl.Controls.TControl'}

{$R *.dfm}

{ TColaboradorLocDataModule }

procedure TColaboradorLocDataModule.Buscar(const _ACampo, _AValor: string);
begin
   TPesquisaHelper.Pesquisar(fdqryColaboradorLoc, 'colaboradores', _ACampo, _AValor);
end;

procedure TColaboradorLocDataModule.DataModuleCreate(Sender: TObject);
begin
  if not Assigned(GerenciadorConexao) or not Assigned(GerenciadorConexao.fdConn) then
    raise Exception.Create('Erro: Gerenciador de conexão não inicializado.');

  fdqryColaboradorLoc.Connection := GerenciadorConexao.fdConn;

  if not fdqryColaboradorLoc.Connection.Connected then
    raise Exception.Create('Erro: Conexão com o banco de dados não está ativa.');

  if fdqryColaboradorLoc.SQL.Text = '' then
    fdqryColaboradorLoc.SQL.Text := 'SELECT * FROM colaboradores';

  fdqryColaboradorLoc.Open;
end;

end.
