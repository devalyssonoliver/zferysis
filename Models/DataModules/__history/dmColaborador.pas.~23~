unit dmColaborador;

interface

uses
  System.SysUtils, System.Classes, Data.DB, FireDAC.Comp.Client,
  FireDAC.Stan.Intf, FireDAC.Stan.Option, FireDAC.Stan.Param,
  FireDAC.Stan.Error, FireDAC.DatS, FireDAC.Phys.Intf, FireDAC.DApt.Intf,
  FireDAC.Stan.Async, FireDAC.DApt, FireDAC.Comp.DataSet;

type
  TColaboradorDataModule = class(TDataModule)
    procedure DataModuleCreate(Sender: TObject);
  public
    procedure Novo;
    procedure Salvar;
    procedure Excluir;
    procedure CarregarDados;
  end;

var
  ColaboradorDataModule: TColaboradorDataModule;

implementation

{%CLASSGROUP 'Vcl.Controls.TControl'}
{$R *.dfm}

procedure TColaboradorDataModule.DataModuleCreate(Sender: TObject);
begin
  fdqColaborador.Open;
end;

procedure TColaboradorDataModule.Novo;
begin
  fdqColaborador.Append;
end;

procedure TColaboradorDataModule.Salvar;
begin
  if fdqColaborador.State in [dsEdit, dsInsert] then
    fdqColaborador.Post;
end;

procedure TColaboradorDataModule.Excluir;
begin
  if not fdqColaborador.IsEmpty then
    fdqColaborador.Delete;
end;

procedure TColaboradorDataModule.CarregarDados;
begin
  fdqColaborador.Close;
  fdqColaborador.Open;
end;

end.

